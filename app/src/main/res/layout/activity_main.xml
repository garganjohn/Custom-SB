<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_containter"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/sound_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Air-Horn"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sound_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gun-Shot"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sound_button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kyle"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sound_button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shockwave"
        android:textSize="20sp" />

    <Button
        android:id="@+id/sound_button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slap"
        android:textSize="20sp" />
    <Button
        android:id="@+id/sound_button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wolf of Wall Street"
        android:textSize="20sp" />


</LinearLayout>